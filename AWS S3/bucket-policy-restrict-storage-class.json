{
    "Version": "2012-10-17",
    "Id": "ExamplePolicy",
    "Statement": [
      {
        "Sid": "AllowBryanS3Access",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::123456789012:user/bryan"
        },
        "Action": [
          "s3:PutObject"
      ],
        "Resource": [
          "arn:aws:s3:::amazons3deepdive/*",
          "arn:aws:s3:::amazons3deepdive"
        ],
        "Condition": {
          "StringEquals": {
            "s3:x-amz-storage-class": ["STANDARD_IA"]
          }
        }
      }
    ]
  }